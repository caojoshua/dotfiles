[section/bar-base]
modules-left = i3
modules-right = audio battery network time

wm-restack = i3

font-0 = "Mono:size=18;2"
separator = "â”‚"
module-margin = 1

[bar/monitor-main]
inherit = section/bar-base
monitor = DVI-I-2

[bar/monitor-secondary]
inherit = section/bar-base
monitor = DVI-I-3

[module/i3]
type = internal/i3
pin-workspaces = true
label-focused-foreground = #00FF00
label-separator = " /"

[module/audio]
type = internal/pulseaudio
format-volume = AUDIO <label-volume>
label-muted = muted

[module/battery]
type = internal/battery
label-charging = Charging %percentage%%
label-discharging = Discharging %percentage%%
label-full = BAT 100%
full-at = 99

[module/network]
type = internal/network
interface = wlp4s0
label-connected = %local_ip%
label-disconnected = disconnected

[module/time]
type = internal/date
interval = 30
date = %c
label = %date%

